{% trans_default_domain 'admin.user.profile' %}

<div class="card-body pt-0">

    <div class="d-flex gap-3">
        <div class="w-100">
            {{ form_row(form.info.usr, {
                label : 'admin.form.label.info.user'|trans,
                placeholder: 'admin.form.placeholder.info.user'|trans
            }) }}
        </div>
        <div class="w-100">
            {{ form_row(form.type, {
                label : 'Тип профиля пользователя'|trans,
                placeholder: 'Выберите тип профиля пользователя из списка ...'|trans
            }) }}
        </div>
    </div>

    <div class="d-flex gap-3">
        <div class="w-100">
            {{ form_row(form.region.value, {
                label: 'Регион пользователя'|trans,
                placeholder: 'Выберите регион пользователя из списка ...'|trans
            }) }}
        </div>

        <div class="w-100">

            <div class="d-flex gap-2 align-items-center mb-2">
                <label class="m-0 form-label required" for="{{ form.domain.value.vars.id }}">
                    {{ 'Домен для переадресации'|trans }}
                </label>
            </div>

            <div class="input-group mb-3">
				<span class="input-group-text" id="basic-addon1">
					<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                         class="bi bi-globe-europe-africa-fill" viewBox="0 0 16 16">
                  <path fill-rule="evenodd"
                        d="M8 0a8 8 0 1 1 0 16A8 8 0 0 1 8 0m0 1a6.97 6.97 0 0 0-4.335 1.505l-.285.641a.847.847 0 0 0 1.48.816l.244-.368a.81.81 0 0 1 1.035-.275.81.81 0 0 0 .722 0l.262-.13a1 1 0 0 1 .775-.05l.984.34q.118.04.243.054c.784.093.855.377.694.801a.84.84 0 0 1-1.035.487l-.01-.003C8.273 4.663 7.747 4.5 6 4.5 4.8 4.5 3.5 5.62 3.5 7c0 3 1.935 1.89 3 3 1.146 1.194-1 4 2 4 1.75 0 3-3.5 3-4.5 0-.704 1.5-1 1-2.5-.097-.291-.396-.568-.642-.756-.173-.133-.206-.396-.051-.55a.334.334 0 0 1 .42-.043l1.085.724a.276.276 0 0 0 .348-.035c.15-.15.414-.083.488.117.16.428.445 1.046.847 1.354A7 7 0 0 0 8 1"/>
                </svg>
				</span>
                {{ form_widget(form.domain.value) }}
            </div>

        </div>

    </div>

    <div class="w-100 d-flex justify-content-between mb-3 gap-3">

        <div class="w-100">
            <div class="invisible bg-danger bg-warning bg-primary"></div>
            <div class="rounded-circle w-15px h-15px bg-light position-absolute end-0 me-15"
                 id="profile_status_circle">
            </div>
            {{ form_row(form.info.status, { label: 'admin.form.label.info.status'|trans }) }}
        </div>

        <div class="w-100">

            <div class="d-flex gap-2 align-items-center mb-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                     class="text-muted" viewBox="0 0 16 16" role="tooltip" data-bs-toggle="tooltip"
                     data-bs-placement="bottom"
                     data-bs-html="true"
                     data-bs-original-title="Положительное либо отрицательное число в рублях, либо с процентом:
                         <br>100.1
                         <br>-100.1
                         <br>10.1%
                         <br>-10.1%">
                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.496 6.033h.825c.138 0 .248-.113.266-.25.09-.656.54-1.134 1.342-1.134.686 0 1.314.343 1.314 1.168 0 .635-.374.927-.965 1.371-.673.489-1.206 1.06-1.168 1.987l.003.217a.25.25 0 0 0 .25.246h.811a.25.25 0 0 0 .25-.25v-.105c0-.718.273-.927 1.01-1.486.609-.463 1.244-.977 1.244-2.056 0-1.511-1.276-2.241-2.673-2.241-1.267 0-2.655.59-2.75 2.286a.237.237 0 0 0 .241.247zm2.325 6.443c.61 0 1.029-.394 1.029-.927 0-.552-.42-.94-1.029-.94-.584 0-1.009.388-1.009.94 0 .533.425.927 1.01.927z"></path>
                </svg>
                <label class="m-0 form-label required" for="{{ form.discount.value.vars.id }}">
                    {{ 'admin.form.label.discount'|trans }}
                </label>
            </div>

            <div class="input-group mb-3">
				<span class="input-group-text" id="basic-addon1">
					<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                         class="bi bi-wallet2"
                         viewBox="0 0 16 16">
					  <path d="M12.136.326A1.5 1.5 0 0 1 14 1.78V3h.5A1.5 1.5 0 0 1 16 4.5v9a1.5 1.5 0 0 1-1.5 1.5h-13A1.5 1.5 0 0 1 0 13.5v-9a1.5 1.5 0 0 1 1.432-1.499zM5.562 3H13V1.78a.5.5 0 0 0-.621-.484zM1.5 4a.5.5 0 0 0-.5.5v9a.5.5 0 0 0 .5.5h13a.5.5 0 0 0 .5-.5v-9a.5.5 0 0 0-.5-.5z"/>
					</svg>
				</span>
                {{ form_widget(form.discount.value) }}
            </div>

        </div>

        <div class="w-100">

            <div class="d-flex gap-2 align-items-center mb-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                     class="text-muted" viewBox="0 0 16 16" role="tooltip" data-bs-toggle="tooltip"
                     data-bs-placement="bottom"
                     data-bs-html="true"
                     data-bs-original-title="Периодичность поставк в днях, на какое количество прибавлять к дате заказа при отсутсвии наличия ">
                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.496 6.033h.825c.138 0 .248-.113.266-.25.09-.656.54-1.134 1.342-1.134.686 0 1.314.343 1.314 1.168 0 .635-.374.927-.965 1.371-.673.489-1.206 1.06-1.168 1.987l.003.217a.25.25 0 0 0 .25.246h.811a.25.25 0 0 0 .25-.25v-.105c0-.718.273-.927 1.01-1.486.609-.463 1.244-.977 1.244-2.056 0-1.511-1.276-2.241-2.673-2.241-1.267 0-2.655.59-2.75 2.286a.237.237 0 0 0 .241.247zm2.325 6.443c.61 0 1.029-.394 1.029-.927 0-.552-.42-.94-1.029-.94-.584 0-1.009.388-1.009.94 0 .533.425.927 1.01.927z"></path>
                </svg>
                <label class="m-0 form-label required" for="{{ form.delivery.day.vars.id }}">
                    {{ 'Поставки'|trans }}
                </label>
            </div>

            <div class="input-group mb-3">
				<span class="input-group-text" id="basic-addon1">
					<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                         class="bi bi-calendar2-range" viewBox="0 0 16 16">
                      <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5M2 2a1 1 0 0 0-1 1v11a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V3a1 1 0 0 0-1-1z"/>
                      <path d="M2.5 4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5H3a.5.5 0 0 1-.5-.5zM9 8a1 1 0 0 1 1-1h5v2h-5a1 1 0 0 1-1-1m-8 2h4a1 1 0 1 1 0 2H1z"/>
                    </svg>
				</span>
                {{ form_widget(form.delivery.day) }}
            </div>

        </div>
    </div>


    <div class="w-100 d-flex justify-content-between gap-3 mb-3">

        <div class="w-100" data-buttons="true">
            <label class="btn w-100 p-3 border-dotted rounded-3 {{ form.shop.value.vars.data ? 'active' : '' }}">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <span class="h5">
                            {{ form_widget(form.shop.value, { label: 'Магазин'|trans }) }}
                        </span>
                    </div>
                </div>
            </label>
        </div>

        <div class="w-100" data-buttons="true">
            <label class="btn w-100 p-3 border-dotted rounded-3 {{ form.orders.value.vars.data ? 'active' : '' }}">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
					<span class="h5">
						{{ form_widget(form.orders.value, { label: 'ПВЗ'|trans }) }}
					</span>
                    </div>
                </div>
            </label>
        </div>

        <div class="w-100" data-buttons="true">
            <label class="btn w-100 p-3 border-dotted rounded-3 {{ form.warehouse.value.vars.data ? 'active' : '' }}">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
					<span class="h5">
						{{ form_widget(form.warehouse.value, { label: 'Склад'|trans }) }}
					</span>
                    </div>
                </div>
            </label>
        </div>

    </div>

</div>